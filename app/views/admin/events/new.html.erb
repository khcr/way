<% @title = 'Admin' %>

<%= link_to 'Home', root_path %>/
<%= link_to 'Admin', admin_path %>/
<%= link_to 'Programme', admin_events_path %>/
<%= link_to 'Nouveau', new_admin_event_path %>

<h1>Ajouter un événement</h1>

<%= form_for [:admin, @event] do |f| %>

	<%= render 'fields', f: f %>


	<% Image.all.each do |image| %>

		<%= image_tag image.image.url %>
		<%= f.radio_button :image_id, image.id %>

	<% end %>

	<%= f.submit "Ajouter" %>
	
<% end %>

<%= form_for Image.new, url: admin_images_path do |f| %>

	<%= render '/shared/flash', flash: flash %>

	<%= f.label :image %>
	<%= f.file_field :image %>

	<%= f.submit "Téléverser" %>

<% end %>
