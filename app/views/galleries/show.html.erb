<% provide(:title, @gallery.name) %>
<% provide(:h1_title, 'Galerie medias photo image fun sortie groupe de jeunes') %>

<h2><%= @gallery.name %></h2>
<div id="gallery_show">
	<p class="description"><%= @gallery.description %><br>Nombre : <%= @gallery.paintings.count %></p>

	<div class="photos">
		<p>
		<% @gallery.paintings.sort.each do |painting| %>
			
			<a class="fancybox-button" rel="fancybox-button" href="<%= painting.image_url %>" title="<%= painting.name %>">
			<img src="<%= painting.image_url(:thumb) %>" alt="" />
			</a>

		<% end %>
		</p>
	</div>
</div>

<script>
	$(function() {
		$('.photos').prepend('<p class="loading" style="background:#fff; color:#333; margin:20px;">Chargement en cours... Veuillez patientez.' + <%= image_tag "admin/loading.gif", style: "vertical-align:middle" %> +'</p>')
		$(window).load(function() {
			$('.loading').hide()
		})
	});
</script>