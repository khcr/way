<% provide(:title, @gallery.name) %>
<% provide(:h1_title, 'Galerie medias photo image fun sortie groupe de jeunes') %>

<h2><%= @gallery.name %></h2>
<div id="gallery_show">
	<p class="description"><%= @gallery.description %></p>

	<div class="photos">
		<p>
		<% @gallery.paintings.sort.each do |painting| %>
			
			<a class="fancybox-button" rel="fancybox-button" href="<%= painting.image_url %>" title="<%= painting.name %>">
			<img src="<%= painting.image_url(:thumb) %>" alt="" />
			</a>

		<% end %>
		</p>
	</div>
</div>
<script>
	$(document).ready(function() {
		$(".fancybox-button").fancybox({
			prevEffect		: 'none',
			nextEffect		: 'none',
			closeBtn		: false,
			helpers		: {
				title	: { type : 'inside' },
				buttons	: {}
			}
		});
	});
</script>

<script>
	$(function() {
		$('.photos').prepend('<p class="loading" style="background:#fff; color:#333; margin:20px;">Chargement en cours... Veuillez patientez. <img style="vertical-align:middle" src="/assets/admin/loading.gif"></p>')
		$(window).load(function() {
			$('.loading').hide()
		})
	});
</script>